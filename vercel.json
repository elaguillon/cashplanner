{
  "builds": [
    {
      "src": "public/index.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "public" }
    },
    {
      "src": "backend/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/index.html"
    }
  ]
}
