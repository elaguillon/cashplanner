{
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static-build",
      "config": { "distDir": "public" }
    },
    {
      "src": "backend/api/index.js",
      "use": "@vercel/node@18.x"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}
